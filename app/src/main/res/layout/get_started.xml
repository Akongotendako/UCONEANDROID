<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="40dp"
    android:paddingHorizontal="20dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/shopping_cart"
            android:contentDescription="UC Merhc logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UC Merch"
            android:textColor="@color/onBackground"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>
    </LinearLayout>


    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to UCONE Merchandise shop"
        android:textColor="@color/onBackground"
        android:textSize="20sp"
        android:layout_marginTop="80dp"/>

    <!-- Description-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explore and shop for uniforms, school IDs, and moreâ€”all in one place."
        android:textColor="@color/onSurfaceContainer"
        android:textSize="18sp"
        android:layout_marginTop="18dp"/>

    <!-- Get started button-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_custom_shape"
        android:layout_marginTop="90dp"
        android:text="GET STARTED"
        android:textColor="@color/onPrimary"/>

</LinearLayout>